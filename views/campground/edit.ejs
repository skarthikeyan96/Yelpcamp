<% include ../partials/main-header.ejs %>
<% include ../partials/header.ejs %>
  <div class="container">
      <h3 class="text-center"> Edit <%= camp.Name %></h3>
      <br/>
    <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
      <div class="form-group">
        
        <input class="form-control" type="text" name="name" value="<%= camp.Name %>"  placeholder="Enter the name of your campground" autocomplete="off" required />
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="image" value="<%= camp.image %>" placeholder="Insert your image link" required>
      </div>
      <div class="form-group">
        
        <input class="form-control" type="number" name="price" value="<%= camp.price %>" placeholder="9.99" min="0.01" step="0.01" autocomplete="off" required />
      </div>
      <div class="form-group">
        
        <input class="form-control" type="text" name="description" value="<%= camp.description%>" placeholder="Californiaâ€™s Sierra Nevada mountains." autocomplete="off" />
      </div>
      <div class="form-group">
        <button class="btn btn-md btn-primary btn-block">Submit!</button>
      </div>
    </form>
    
    <a href="/campgrounds">Back</a> 
</div>
<% include ../partials/footer %>
